@inherits BaseButtonComponent

<button class="btn@(IsSmall ? " btn-sm" :"") btn@(IsOutline ? "-outline":"")-@Color"
        type="submit"
        disabled="@IsBusy"
        onclick="@OnClick"
        title="@ToolTipStr">

    <i class="fa fa-@Icon" aria-hidden="true"></i>

    @if (IsBusy)
    {
        <span class="spinner-border-sm mr-1"></span>
    }


    @Caption


</button>


